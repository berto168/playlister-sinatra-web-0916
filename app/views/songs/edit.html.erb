<h1>Edit your Song Info!</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
 <input type="hidden" name="_method" value="PATCH">

 <label for="Name">Name</label>
 <input type="text" name="name" id="Name" value="<%= @song.name %>"><br>

 <label for="Artist Name">Artist Name</label>
 <input type="text" name="artist" value="<%= @song.artist.name %>" id="Artist Name"><br>

 <% Genre.all.each do |genre| %>
   <label><%= genre.name %></label>
   <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
 <% end %>
<br>
 <input type="submit" value="Save">
</form>
